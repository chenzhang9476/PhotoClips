<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context=".Display.EditingPictureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/EditingBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipChildren="false"
            android:layout_weight="2">
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
            <com.example.photoclips.utils.MyImageview
                android:id="@+id/editrowpic8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:visibility="gone"
                android:scaleType="matrix">
            </com.example.photoclips.utils.MyImageview>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/pink"
            android:orientation="horizontal">
            <Button
                android:id="@+id/editnext"
                android:layout_marginLeft="@dimen/Dialog_Margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:text="@string/Nextpic" />
            <Button
                android:id="@+id/editingbutton"
                android:layout_marginLeft="@dimen/Button_Padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:textColor="@color/white"
                android:text="@string/Save" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>